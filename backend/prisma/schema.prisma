generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("admin")
  settings  Json?
  createdAt DateTime @default(now())
}

model Client {
  id           Int      @id @default(autoincrement())
  name         String
  email        String
  phone        String?
  billingAddress String?
  createdAt    DateTime @default(now())
  bookings     Booking[]
}

model Booking {
  id                    Int      @id @default(autoincrement())
  clientId              Int
  client                Client   @relation(fields: [clientId], references: [id])
  status                String   @default("pending_approval")
  clientRequestedStart  DateTime
  clientRequestedEnd    DateTime
  adminAdjustedStart    DateTime?
  adminAdjustedEnd      DateTime?
  calendarEventId       String?
  createdAt             DateTime @default(now())
}

model Invoice {
  id        Int     @id @default(autoincrement())
  clientId  Int
  client    Client  @relation(fields: [clientId], references: [id])
  items     Json
  subtotal  Float
  tax       Float
  total     Float
  dueDate   DateTime
  status    String  @default("draft")
  createdAt DateTime @default(now())
}

model Expense {
  id        Int @id @default(autoincrement())
  vendor    String
  amount    Float
  date      DateTime
  category  String?
  receiptUrl String?
  rawOcr    Json?
  createdAt DateTime @default(now())
}

model EmailTemplate {
  id        Int @id @default(autoincrement())
  name      String
  subject   String
  bodyHtml  String
  variables Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Setting {
  id Int @id @default(autoincrement())
  key String @unique
  value Json
}

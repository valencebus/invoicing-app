// backend/prisma/schema.prisma

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "linux-musl"]
}

datasource db {
  provider = "postgresql"
}

model Client {
  id       Int       @id @default(autoincrement())
  name     String
  email    String
  phone    String?
  invoices Invoice[]
}

model Invoice {
  id        Int      @id @default(autoincrement())
  clientId  Int
  client    Client   @relation(fields: [clientId], references: [id])
  items     Json
  total     Float
  status    String
  createdAt DateTime @default(now())
}

model EmailTemplate {
  id        Int      @id @default(autoincrement())
  name      String
  subject   String
  bodyHtml  String
  createdAt DateTime @default(now())
}
